<template>
  <div class="aCount">
      <div class="aCount-head">
        <span class="aCount-face" :style="'background:url('+getUser.logoUrl+') center center no-repeat;background-size:cover;'"></span>
        <div class="aCount-con">
          <h1>{{getUser.nickName}}</h1>
          <h2>手机号：{{getUser.mobile}}</h2>
        </div>
      </div>
      <h2 class="aCount-area">已授权工地</h2>
      <div class="aCount-body">
        <yd-infinitescroll :on-infinite="loadList" ref="infinitescrollDemo">
          <yd-list theme="1" slot="list">
              <ul class="aCount-title">
                <li v-for="(item,index) in list" :key="index"><span class="aCount-name" @click="right(item.suid,item.pid)">{{item.title}}</span><button class="aCount-cancel" @click="cancelAuthorize(item.suid,item.pid)">取消授权</button></li>
              </ul>
        </yd-list>
        <!-- 数据全部加载完毕显示 -->
        <span slot="doneTip">啦啦啦，啦啦啦，没有数据啦~~</span>
        <!-- 加载中提示，不指定，将显示默认加载中图标 -->
        <img slot="loadingTip" src="http://static.ydcss.com/upload·s/ydui/loading/loading10.svg"/>
        </yd-infinitescroll>
      </div>
    <div class="aCount-new" @click="href">授权新项目</div>
  </div>
</template>

<script>
    export default {
      data(){
        return{
          page: 0,
          pageSize: 10,
          list: [],
          getUser:{}
        }
      },
      created () {
        // this.geidis()
        this.loadList();
        this.getUserInfo();
      },
      methods:{
        getUserInfo() {
          this.$http.post(this.$api.apihost+'user/getUserInfo',{uid:localStorage.uid},{emulateJSON:true}).then(function (response) {
            this.getUser=response.body.obj;
          });
        },
        loadList() {
          this.$http.post(this.$api.apihost+'user/getSubUserPro',{uid:localStorage.uid,suid:this.$route.params.suid,startRow:this.page,rowCount:this.pageSize},{emulateJSON:true}).then(function (response) {
            if(response.body.obj!=""){
              const _list = response.body.obj.subUserProjectList;
              this.list = [...this.list, ..._list];
              if (_list.length < this.pageSize || this.page == 3) {
                /* 所有数据加载完毕 */
                this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.loadedDone');
                return;
              }
              /* 单次请求数据完毕 */
              this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.finishLoad');
              this.page++;
            }
          });
        },
        cancelAuthorize(suid,pid){  //点击取消授权
          console.log(suid,pid);
          this.$http.post(this.$api.apihost + 'user/cancelProAuthorize',{uid:localStorage.uid,suid:suid,pid:pid},{emulateJSON:true}).then(res => {
            console.log(res);}, err =>{console.log(err);});
        },
        right(suid,pid){
          this.$router.push({ name: 'aEdit', params:{suid:suid , pid:pid}});
        },
        href(){
          this.$router.push('/aTitle')
        }
      }
    }
</script>
