                isActive:true,
                hasData:true,
                isEdit:true,
                titleval:'工地详情',
                nodata:'暂时没有记录！',
                // uptext:'全文',
                siteId:'',
                comimg:this.$api.imghost,
                proinfo:{
                    startDate:'2017-1-6'
                },
                nowtime:'',
                recordList:[],
                pagenum:0,
                page: 0,
                pageSize: 10
            }
        },
        created(){
            this.siteId=this.$route.params.siteId;
            this.getProInfo()
            this.getProRecordList()
            document.title=this.titleval
            var date = Date.parse(new Date());
            this.nowtime=date;
        },
        methods:{
            attentBtn(){
                this.$http.post(this.$api.apihost+'project/followPro',{
                    pid:this.siteId,
                    uid:localStorage.uid,
                    status:1
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                },(err)=>{

                });
            },
            feedbackIs(res){
                // 分享
                console.log(res);
            },
            toEditPro(rid){
                this.$router.push({ name: '编辑记录', params: { pid: this.siteId,rid:rid }})
            },
            clearRecd(resd){
                console.log("删除："+resd);
                var rid=resd;
                this.$http.post(this.$api.apihost+'project/delRecord',{
                    pid:this.siteId,
                    uid:localStorage.uid,
                    rid:rid
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                    this.recordList=[];
                    this.getProRecordList();
                },(err)=>{

                });
            },
                 //计算天数差的函数，通用
        DateDiff(sDate1,  sDate2){//sDate1是时间戳，sDate2是2006-12-18格式
            var  aDate,  oDate1,  oDate2,  iDays
           oDate1=sDate1
           // aDate  =  sDate2.split("-")
           var arr = sDate2.split(/[- : \/]/);
            oDate2 = new Date(arr[0], arr[1]-1, arr[2]);
            // console.log(oDate2);j
           // oDate2  =  new  Date(aDate[1]  +  '-'  +  aDate[2]  +  '-'  +  aDate[0])
           iDays  =  parseInt(Math.abs(oDate1  -  oDate2)  /  1000  /  60  /  60  /24)    //把相差的毫秒数转换为天数
           return  iDays
        },
            getProInfo(){
                this.$http.post(this.$api.apihost+'project/getProInfo',{
                    pid:this.siteId
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                    const proinfo = res.body.obj;
                    this.proinfo=proinfo;
                },(err)=>{

                });
            },
            alltext(e){
                var  textval=$(e.target).text();
                if (textval=='全文') {
                     $(e.target).parent().find(".c_record").removeClass('lineclamp');
                     $(e.target).text("收起");
                }
                if (textval=='收起') {
                     $(e.target).parent().find(".c_record").addClass('lineclamp');
                     $(e.target).text("全文");
                }
            },
            // applywatch(){
            //     this.$router.push({ name: 'freeVisit', params: { siteId: this.siteId }})
            // },
            getProRecordList(){
                this.$http.post(this.$api.apihost+'project/getProRecordList',{
                    pid:this.siteId,
                    uid:localStorage.uid
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                    const recordList = res.body.obj.recordList;
                    this.recordList=recordList;
                },(err)=>{

                });
            },
            getProRecordList(){
                this.$http.post(this.$api.apihost+'project/getProRecordList',{
                    pid:this.siteId,
                    uid:localStorage.uid,
                    startRow:this.page,
                    rowCount:this.pageSize
                },{emulateJSON:true}).then((res)=>{
                    if (!res.body.obj) {
                       this.hasData=false
                    }else{
                        const recordList = res.body.obj.recordList;
                        this.recordList=recordList;
                        var count=res.body.obj.count;
                        var pagecount=Math.ceil(count/this.pageSize);
                        if (recordList.length < this.pageSize || this.pagenum == pagecount) {
                        
                            /* 所有数据加载完毕 */
                            this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.loadedDone');
                            return;
                        }
                        /* 单次请求数据完毕 */
                        this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.finishLoad');
                        this.pagenum++;
                        this.page+=this.pageSize;
                    } 
                },(err)=>{

                });
            }
        }
    }
