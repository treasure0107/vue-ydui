<script>
  import District from 'ydui-district/dist/jd_province_city_area_id';
  export default {
    data () {
      return {
        show2: false,
        model2: '',
        province:"",
        city:"",
        area:"",
        position:[],
        pid:"",
        district: District,
        title:"",
        showAdd:false,
        budget:"",
        proSize:"",
        proAdd: "",
        swit: true,
        disappear: false,
        other: false,
        reveal: false,
        imgurl:"",
        comimg:this.$api.imghost,
        proInfo: {
          budget:"",
          proSize:"",
          startDate:""
        },
        coverImgUrl:"",
        content:"",
        switch1: false,
        checkbox1: false,
        checkbox2: false,
        contractList:[],
        contractImg:[],
        constructList:[],
        constructImg:[],
        datetime: '2018-03-29',
        yearFormat: '<span style="color:#F00;">{value}<i style="font-size: 12px;margin-left: 1px;">年</i></span>',
        monthFormat: '<span style="color:#0BB20C;">{value}<i style="font-size: 12px;margin-left: 1px;">月</i></span>',
        dayFormat: '<span style="color:#FFB400;">{value}<i style="font-size: 12px;margin-left: 1px;">日</i></span>',
      }
    },
    mounted(){
      this.getProInfo();
      this.getRecordInfo();
    },
    methods: {
      getProInfo() {
        this.$http.post(this.$api.apihost+'project/getProInfo',{pid:this.$route.params.pid},{emulateJSON:true}).then(function (response) {
          if(response.body.obj !=''){
            let data= response.body.obj;
            this.proInfo=data;
            this.datetime=data.startDate;
            if(data.allowVisit==1){
              this.switch1=true;
            }else{
              this.switch1=false;
            }
            if(data.constructImgList.length){
              this.checkbox1 = true;
            }else{
              this.checkbox1 = false;
            }
            if(data.contractImgList.length){
              this.checkbox2 = true;
            }else{
              this.checkbox2 = false;
            }
            this.model2=data.province+' '+data.city+' '+data.area;
            this.title=data.title;
            this.position=data.position;
            this.province=data.province;
            this.city=data.city;
            this.area=data.area;
            this.proAdd=data.address;
            this.budget=data.budget;
            this.proSize=data.proSize;
            this.coverImgUrl=data.coverImgUrl;
            if(data.contractImgList.length){
              this.checkbox1=true;
              for(var b=0;b<data.contractImgList.length;b++){
                this.contractList.push(data.contractImgList[b].imgUrl);
              }
              console.log(this.contractList);
            }
            if(data.constructImgList.length){
              this.checkbox2=true;
              for(var i=0;i<data.constructImgList.length;i++){
                this.constructList.push(data.constructImgList[i].imgUrl);
              }
            }
          }
        });
      },
      getRecordInfo() {
        this.$http.post(this.$api.apihost+'project/getRecordInfo',{rid:this.$route.params.rid,uid:localStorage.uid},{emulateJSON:true}).then(function (response) {
          if(response.body.obj.openStatus==1){
            this.swit=true;
          }else{
            this.swit=false;
          }
          this.content=response.body.obj.content;
        });
      },
      addGet(){
        this.showAdd=true;
        window.addEventListener('message' , (event)=> {
          // 接收位置信息，用户选择确认位置点后选点组件会触发该事件，回传用户的位置信息
          var  loc=event.data;
          if (loc && loc.module === 'locationPicker') {
            this.proAdd = loc.poiaddress;
            this.position.push(loc.latlng.lat);
            this.position.push(loc.latlng.lng);
            this.showAdd=false;
          }
        }, false)
      },
      result2(ret) {
        this.model2 = ret.itemName1 + ' ' + ret.itemName2 + ' ' + ret.itemName3;
        this.province=ret.itemName1;
        this.city=ret.itemName2;
        this.area=ret.itemName3;
      },
      show () {
        this.reveal = true;
        $(".m-action").addClass("action-active");
      },
      hide() {
        this.reveal = false;
        $(".m-action").removeClass("action-active");
      },
      mask(){
        this.reveal = false;
        $(".m-action").removeClass("action-active");
      },
      del(e){
        var riid=$(e.target).data("riid");
        this.$http.post(this.$api.apihost+'project/delRecordImg',{rid:25,uid:localStorage.uid,riid:riid},{emulateJSON:true}).then(function (response) {
          $(e.target).parent().remove();
        });
      },
      releasepro(){
        let title = this.title;
        let province=this.province;
        let city=this.city;
        let area=this.area;
        let address=this.proAdd;
        let position=this.position;
        let budget=this.budget;
        let proSize=this.proSize;
        let coverImgUrl=this.coverImgUrl;
        let startDate=this.datetime;
        let allowVisit=(this.switch1== false ? 0:1);
        let content=this.content;
        let openStatus=(this.swit== false ? 0:1);
        this.$http.post(this.$api.apihost+'project/editRecord',{pid:this.$route.params.pid,uid:localStorage.uid,rid:this.$route.params.rid,title:title,province:province,city:city,area:area,address:address,position:position,budget:budget,proSize:proSize,coverImgUrl:coverImgUrl,startDate:startDate,allowVisit:allowVisit,content:content,openStatus:openStatus},{emulateJSON:true}).then(function (response) {
          alert("发布成功");
          this.$router.go(-1);
        });
      },
      fadeOut(){
        this.disappear=false;
      },
      doContr(){
        var formData = new FormData($("#uploa" )[0]);
        $.ajax({
          url: this.$api.upimgurl,
          type: 'POST',
          data: formData,
          async: false,
          cache: false,
          contentType: false,
          processData: false,
          success:(data)=> {
            let imgUrl=$.trim(data.substring(data.indexOf("MD5:") + 4, data.indexOf("</h1>")));
            this.contractImg.push(imgUrl);
            if(this.contractImg.length){
              this.checkbox1=true;
            }
            this.$http.post(this.$api.apihost+'project/uploadProPic',{pid:this.$route.params.pid,uid:localStorage.uid,imgUrl:imgUrl,imgType:1},{emulateJSON:true}).then(function (response) {

            });
          },
          error: (returndata)=> {
            alert(returndata);
          }
        });
      },
      doConst(){
        var formData = new FormData($("#upload" )[0]);
        $.ajax({
          url: this.$api.upimgurl,
          type: 'POST',
          data: formData,
          async: false,
          cache: false,
          contentType: false,
          processData: false,
          success:(data)=> {
            let imgUrl=$.trim(data.substring(data.indexOf("MD5:") + 4, data.indexOf("</h1>")));
            this.constructImg.push(imgUrl);
            if(this.constructImg.length){
              this.checkbox2=true;
            }
            this.$http.post(this.$api.apihost+'project/uploadProPic',{pid:this.$route.params.pid,uid:localStorage.uid,imgUrl:imgUrl,imgType:2},{emulateJSON:true}).then(function (response) {

            });
          },
          error: (returndata)=> {
            alert(returndata);
          }
        });
      },
      delConstPic(e){
        this.disappear=true;
        this.imgurl=$(e.target).data("imgurl");
        this.flage = "const";
      },
      delContrPic(e){
        this.disappear=true;
        this.imgurl=$(e.target).data("imgurl");
        this.flage = "contr";
      },
      deleImg(){
        if(this.flage=="const"){
          let index=this.constructImg.indexOf(this.imgurl);
          this.constructImg.splice(index,1);
          this.disappear=false;
          if($(".deco_construct li").length){
            this.checkbox2=false;
          }
        }else if(this.flage=="contr"){
          let ind=this.contractImg.indexOf(this.imgurl);
          this.contractImg.splice(ind,1);
          this.disappear=false;
          if($(".deco_contract li").length){
            this.checkbox1=false;
          }
        }
      },
    }
  }
</script>
