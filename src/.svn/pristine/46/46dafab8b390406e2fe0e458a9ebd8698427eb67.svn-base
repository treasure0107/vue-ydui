<script>
  export default {
    data: function () {
      return {
        phone:"",
        code:"",
        disabled:false,
        value:"获取验证码",
        count:60
      }
    },
    methods:{
      getCode(){
        if(this.phone!=""){
          alert("请输入验证码123456");
          // this.$http.post(this.$api.apihost+'base/sendMsg',{type:4,mobile:this.phone},{emulateJSON:true}).then(function (response) {
          // });
          let codeTime=setInterval(()=> {
            if (this.count == 0) {
              this.disabled=false;
              this.value="重新发送";
              this.count=60;
              clearInterval(codeTime);
            } else {
              this.disabled=true;
              this.value=this.count+"s";
              this.count--;
            }
          },1000)
        }else{
          alert("请输入手机号");
        }
      },
      sendMsg(){
        if(this.phone ==""){
          alert("请输入手机号");
        }else if(this.code==""){
          alert("请输入验证码")
        }else{
           this.$router.push('/index');
        }
      }
    }
  }
</script>
