<script>
  import {Tab, TabPanel} from 'vue-ydui/dist/lib.rem/tab';
  /* 使用px：import {CellGroup, CellItem} from 'vue-ydui/dist/lib.px/cell'; */
  //  Vue.component(Tab.name, Tab);
  //  Vue.component(TabPanel.name, TabPanel);
  import apicom from '../config/api.js'

  export default {
    data() {
      return {
        allInfo: true,
        allVisit: false,
        evaluate: false,
        active: true,
        commentModel: false,
        isard: false,
        isfriend: true,
        isas: true,
        rateNum: 5,
        list: [],
        waitingList: [],
        evaluationList: [],
        imgurl: apicom.imghost,
        nowtime: '',
        page: 0,
        pageSize: 10,
        textArea: '',
        mannerLevel: 3,
        pid: '',
        vids:'',
      };
    },
    created() {
//      this.allMessage();
      this.getWaitingToVisit(); //待参观
      this.getAllVisit();   //全部
      this.getPendingEvaluation();  //待评价
      this.ardour_m;
      this.friendly_m;
      this.sameAs;
      var date = Date.parse(new Date());
      this.nowtime = date;
    },
    mounted() {

    },
    methods: {
      allchange(a,b){
       if(b==1){
         this.getAllVisit();
       }
        if(b==2){
          this.getWaitingToVisit();
        }
        if(b==3){
          this.getPendingEvaluation();
        }
      },
//      allMessage() {
//        this.conid = this.$route.params.id;
////         this.conid = this.$route.id;
//        if (this.conid == 1) {
//          this.allInfo = true;
//          this.allVisit = false;
//          this.evaluate = false
//        } else if (this.conid == 2) {
//          this.allInfo = false;
//          this.allVisit = true;
//          this.evaluate = false
//        } else if (this.conid == 3) {
//          this.allInfo = false;
//          this.allVisit = false;
//          this.evaluate = true
//        }
//      },
      evaluateBtn(pid,vid) {
//        @click.native="commentModel = true"
        this.textArea='';
        this.isard=false;
        this.isfriend=true;
        this.isas=true;
        this.commentModel = true;
        this.pid = pid;
        this.vids=vid;
      },
      //全部
      getAllVisit() {
        this.list=[];
        //拼接url
        const postUrl = apicom.apihost + 'visit/getVisitByWait';
        //请求数据
        this.$http.post(postUrl, {
          uid: localStorage.uid,
          startRow: this.page,
          rowCount: this.pageSize
        }, {emulateJSON: true}).then(res => {
          console.log(res.body.obj.visitList);
          console.log(res.body.obj.visitList);
//          this.allList = res.body.obj.visitList;
          const _list = res.body.obj.visitList;
          this.list = [...this.list, ..._list];
          if (_list.length < this.pageSize - 1 || this.page == 3) {
            /* 所有数据加载完毕 */
            this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.loadedDone');
            return;
          }
          /* 单次请求数据完毕 */
          this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.finishLoad');
          this.page++;
        }, err => {
          console.log(err);
        })
      },
      //待参观 status=4
      getWaitingToVisit() {
        this.waitingList=[];
        //拼接url
        const postUrl = apicom.apihost + 'visit/getVisitByWait';
        //请求数据
        this.$http.post(postUrl, {
          uid: localStorage.uid,
          startRow: this.page,
          rowCount: this.pageSize
        }, {emulateJSON: true}).then(res => {
//          this.waitingList = res.body.obj.visitList;
          console.log(res.body.obj.visitList);
          const _list = res.body.obj.visitList;
          this.waitingList = [...this.waitingList, ..._list];
          if (_list.length < this.pageSize - 1 || this.page == 3) {
            /* 所有数据加载完毕 */
            this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.loadedDone');
            return;
          }
          /* 单次请求数据完毕 */
          this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.finishLoad');
          this.page++;
        }, err => {
          console.log(err);
        })
      },
      //待评价 status=5
      getPendingEvaluation() {
        this.evaluationList=[];
        //拼接url   const getUrl = apicom.apihost + 'visit/getVisitByWait?uid=100000&startRow=0&rowCount=6';
        const postUrl = apicom.apihost + 'visit/getVisitByWait';
        //请求数据   localStorage.uid
        this.$http.post(postUrl, {
          uid: localStorage.uid,
          startRow: this.page,
          rowCount: this.pageSize
        }, {emulateJSON: true}).then(res => {
          console.log(res.body.obj.visitList);
//          this.evaluationList = res.body.obj.visitList;
          const _list = res.body.obj.visitList;
          this.evaluationList = [...this.evaluationList, ..._list];
          if (_list.length < this.pageSize - 1 || this.page == 3) {
            /* 所有数据加载完毕 */
            this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.loadedDone');
            return;
          }
          /* 单次请求数据完毕 */
          this.$refs.infinitescrollDemo.$emit('ydui.infinitescroll.finishLoad');
          this.page++;

        }, err => {
          console.log(err);
        })
      },
      //    取消预约
      cancelVisit(vid) {
//        const canUrl = apicom.apihost + 'visit/cancelVisit?uid=100000&vid=' + vid;
        const canUrl = apicom.apihost + 'visit/cancelVisit';
        this.$http.post(canUrl, {
          uid: localStorage.uid,
          vid: vid
        }, {emulateJSON: true}).then(res => {
//          console.log(res);
//          this.$router.go(0);  //刷新页面
          this.getWaitingToVisit(); //待参观
          this.getAllVisit();   //全部
        }, err => {
          console.log(err);
        })
      },
//      评价 (点击时间)
      ardour_m() {
        this.isard = !this.isard;
        this.isfriend = true;
        this.isas = true;
        if (this.isard) {
          this.mannerLevel = 3;
        } else {
          this.mannerLevel = 3;
        }
      },
      friendly_m() {
        if (this.isfriend) {
          this.mannerLevel = 2;
        } else {
          this.mannerLevel = 3;
        }
        this.isfriend = !this.isfriend
        this.isard = true;
        this.isas = true;
      },
      sameAs() {
        this.isas = !this.isas
        this.isard = true;
        this.isfriend = true;
        if (!this.isas) {
          this.mannerLevel = 1;
        } else {
          this.mannerLevel = 3;
        }
      },
      proEvaluateBtn() {
//        console.log(this.rateNum);
//        console.log(this.mannerLevel);
//        console.log(this.pid);
//        console.log(this.vids);
        if (this.textArea == "") {
          alert("请您写几句评价吧!");
          return false;
        }
        const postUrl = apicom.apihost + 'visit/proEvaluate';
        this.$http.post(postUrl, {
          pid: this.pid,                    //项目id
          vid:this.vids,                     //参观预约ID
          constructLevel: this.rateNum,    //施工工艺评分
          mannerLevel: this.mannerLevel,  //态度评分
          content: this.textArea,        //评价内容
          uid: localStorage.uid                   //评价人ID
        }, {emulateJSON: true}).then(res => {
//          console.log(res);
//          alert(res.body.msg);
          this.commentModel = false;
          this.getPendingEvaluation();  //待评价
        }, err => {
          console.log(err);
        })
      },
      //计算天数差的函数，通用
      DateDiff(sDate1, sDate2) {//sDate1是时间戳，sDate2是2006-12-18格式
        var aDate, oDate1, oDate2, iDays;
        oDate1 = sDate1;
        aDate = sDate2.split("-");
        oDate2 = new Date(aDate[1] + '-' + aDate[2] + '-' + aDate[0]);
        iDays = parseInt(Math.abs(oDate1 - oDate2) / 1000 / 60 / 60 / 24);    //把相差的毫秒数转换为天数
        return iDays
      }
    }
  }
</script>

