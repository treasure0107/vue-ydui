        data(){
            return {
                isActive:true,
                isEdit:true,
                titleval:'工地详情',
                uptext:'全文',
                siteId:'',
                comimg:comapi.imghost,
                proinfo:{
                    startDate:'2017-1-6'
                },
                nowtime:'',
                recordList:[]
            }
        },
        created(){
            this.siteId=this.$route.params.siteId;
            this.getProInfo()
            this.getProRecordList()
            document.title=this.titleval
            var date = Date.parse(new Date());
            this.nowtime=date;
        },
        methods:{
            attentBtn(){
                this.$http.post(comapi.apihost+'project/followPro',{
                    pid:this.siteId,
                    uid:localStorage.uid,
                    status:1
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                },(err)=>{

                });
            },
            feedbackIs(res){
                // 分享
                console.log(res);
            },
            toEditPro(){
                this.$router.push({ name: 'edProject', params: { pid: this.siteId }})
            },
            clearRecd(resd){
                console.log("删除："+resd);
                var rid=resd;
                this.$http.post(comapi.apihost+'project/delRecord',{
                    pid:this.siteId,
                    uid:localStorage.uid,
                    rid:rid
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                    this.recordList=[];
                    this.getProRecordList();
                },(err)=>{

                });
            },
            //计算天数差的函数，通用
            DateDiff(sDate1,  sDate2){//sDate1是时间戳，sDate2是2006-12-18格式
                var  aDate,  oDate1,  oDate2,  iDays
                oDate1=sDate1
                aDate  =  sDate2.split("-")
                oDate2  =  new  Date(aDate[1]  +  '-'  +  aDate[2]  +  '-'  +  aDate[0])
                iDays  =  parseInt(Math.abs(oDate1  -  oDate2)  /  1000  /  60  /  60  /24)   //把相差的毫秒数转换为天数
                 return  iDays
            },
            getProInfo(){
                this.$http.post(comapi.apihost+'project/getProInfo',{
                    pid:this.siteId
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                    const proinfo = res.body.obj;
                    this.proinfo=proinfo;
                },(err)=>{

                });
            },
            alltext(){
                this.isActive=!this.isActive;
                if (this.isActive) {
                    this.uptext='全文'
                }else{
                    this.uptext='收起'
                }
            },
            // applywatch(){
            //     this.$router.push({ name: 'freeVisit', params: { siteId: this.siteId }})
            // },
            getProRecordList(){
                this.$http.post(comapi.apihost+'project/getProRecordList',{
                    pid:this.siteId,
                    uid:localStorage.uid
                },{emulateJSON:true}).then((res)=>{
                    console.log(res);
                    const recordList = res.body.obj.recordList;
                    this.recordList=recordList;
                },(err)=>{

                });
            }
        }
